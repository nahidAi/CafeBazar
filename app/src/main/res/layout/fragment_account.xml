<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <include layout="@layout/usual_toolbar"/>
    <TextView
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:layout_marginRight="16dp"
        android:text="نام کاربری:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/black"
        android:layout_marginRight="32dp"
        android:textSize="18sp"
        android:text="مجتبی نکویی"
        android:id="@+id/txt_fargmentAccount_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="16sp"
        android:layout_marginRight="16dp"
        android:text="شماره همراه:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/black"
        android:layout_marginRight="32dp"
        android:textSize="18sp"
        android:text="09136525487"
        android:id="@+id/txt_fragmentAccount_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey_300"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/txt_fragmentAccount_exit"
        android:textSize="16sp"
        android:textColor="#ff0000"
        android:layout_marginRight="16dp"
        android:text="خروج از حساب کاربری"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>